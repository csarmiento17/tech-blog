<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text-comment">
      {{comment_text}}
      <button id={{id}} type="button" class="delete-comment-btn btn btn-danger" onclick="deleteCommentHandler(this.id)">x</button>
   </div>
    
  </section>
  {{/each}}
</div>