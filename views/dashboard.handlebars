<div class='dashboard'>
<section>
  <h2 class="text-heading">Create New Post</h2>

  <form class="new-post-form form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-desc">Content</label>
      <textarea id="post-desc" name="post-desc"></textarea>
    </div>
    <button class="btn btn-dark" type="submit" class="btn">Add Post</button>
  </form>
</section>

{{#if posts.length}}
<section class="dashboard-post">
  <h2 class="text-heading">Your Posts</h2>
  <div>
    {{#each posts as |post|}}
    <div class="dashboard-editpost">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </div>
    {{/each}}
  </div>
</section>
{{/if}}
</div>
<script src="/javascript/add-post.js"></script>